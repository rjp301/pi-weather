---
import { Button } from "./ui/button";

const { user } = Astro.locals;
---

<nav
  class="bg-card shadow border-b flex items-center justify-between px-6 py-2"
>
  <div class="flex gap-4 items-center">
    <a href="/" class="flex gap-2">
      <img src={"/logo.png"} alt="SA Energy Logo" class="h-6" />
      <h1 class="font-medium">CGL S34 Weather Summary</h1>
    </a>
  </div>
  <div class="flex gap-4 items-center">
    {
      user ? (
        <>
          <div>{user.username}</div>
          <form action="/api/auth/logout" method="post">
            <Button type="submit" variant="outline">
              Logout
            </Button>
          </form>
        </>
      ) : (
        <>
          <div class="text-muted-foreground">Guest</div>
          <a href="/auth">
            <Button>Login</Button>
          </a>
        </>
      )
    }
  </div>
</nav>
