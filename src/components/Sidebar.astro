---
import { Button } from "./ui/button";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import {
  faCloud,
  faAt,
  faSatelliteDish,
  faGear,
  faQuestionCircle,
} from "@fortawesome/free-solid-svg-icons";
import type { IconDefinition } from "@fortawesome/fontawesome-common-types";

interface Page {
  name: string;
  link: string;
  icon: IconDefinition;
}

const pages: Page[] = [
  { name: "Weather", link: "/weather", icon: faCloud },
  { name: "Emails", link: "/emails", icon: faAt },
  { name: "Stations", link: "/stations", icon: faSatelliteDish },
  { name: "Settings", link: "/settings", icon: faGear },
  { name: "Help", link: "/help", icon: faQuestionCircle },
];

const currentPage = (link: string) => {
  if (link === "/")
    return pages
      .filter((page) => page.link !== "/")
      .every((page) => !Astro.url.pathname.startsWith(page.link));
  return Astro.url.pathname.startsWith(link);
};
---

<nav>
  <ul class="grid gap-2">
    {
      pages.map((page) => (
        <li class="w-full">
          <a href={page.link} class="w-full">
            <Button
              variant={currentPage(page.link) ? "secondary" : "ghost"}
              className="w-full justify-start"
            >
              <FontAwesomeIcon icon={page.icon} className="h-4 w-4 mr-2" />
              {page.name}
            </Button>
          </a>
        </li>
      ))
    }
  </ul>
</nav>
