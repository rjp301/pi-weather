---
import Layout from "@/layouts/Layout.astro";

import {
  Table,
  TableBody,
  TableCaption,
  TableCell,
  TableHead,
  TableHeader,
  TableRow,
} from "@/components/ui/table";

import { EmailDialog } from "@/components/dialogs/EmailDialog";
import type { Record } from "pocketbase";
import { Button } from "@/components/ui/button";
import { CheckCircle2, Delete, Plus } from "lucide-react";

const emails = await Astro.locals.pb
  .collection("emails")
  .getFullList({ sort: "-created" });
---

<Layout>
  <div class="flex justify-between w-full items-center mb-2">
    <h2 class="font-bold">Distribution Emails</h2>
    <EmailDialog client:load />
  </div>
  <Table>
    <TableHeader>
      <TableRow>
        <TableHead>Email</TableHead>
        <TableHead>Tester</TableHead>
        <TableHead>Delete</TableHead>
      </TableRow>
    </TableHeader>
    <TableBody>
      {
        emails.map((email: Record) => (
          <TableRow>
            <TableCell>{email.email}</TableCell>
            <TableCell className="w-10 text-center text-emerald-500">
              {email.tester && <CheckCircle2 className="h-4 w-4 mx-auto" />}
            </TableCell>
            <TableCell className="w-10 text-center">
              <form
                action={`/api/emails/${email.id}/delete`}
                method="post"
                onsubmit="
                return confirm('Are you sure you want to delete this?')
                "
              >
                <Button
                  size="icon"
                  variant="ghost"
                  className="h-8 w-8 text-muted-foreground"
                >
                  <Delete className="h-4 w-4" />
                </Button>
              </form>
            </TableCell>
          </TableRow>
        ))
      }
    </TableBody>
  </Table>
</Layout>
@/components/dialogs/EmailDialog
