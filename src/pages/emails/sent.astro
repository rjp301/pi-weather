---
import { Button } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";

import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import CenteredCard from "@/layouts/CenteredCard.astro";

const test = Boolean(Astro.url.searchParams.get("test"));
---

<Layout>
  <CenteredCard>
    <Card>
      <CardHeader>
        <CardTitle>{test ? "Test" : ""} Email Sent</CardTitle>
        <CardDescription>
          You have sent a weather summary to {
            test ? "the developer" : "all recipients"
          }
        </CardDescription>
      </CardHeader>
      <CardFooter>
        <a href={"/weather"} class="w-full">
          <Button className="w-full">Return to Summary</Button>
        </a>
      </CardFooter>
    </Card>
  </CenteredCard>
</Layout>
