---
import Layout from "@/layouts/Layout.astro";
import {
  Table,
  TableBody,
  TableCaption,
  TableCell,
  TableHead,
  TableHeader,
  TableRow,
} from "@/components/ui/table";

import { TrashIcon, Pencil1Icon } from "@radix-ui/react-icons";
import { Button } from "@/components/ui/button";

const stations = await Astro.locals.pb
  .collection("weather_stations")
  .getFullList({ sort: "-created" });
---

<Layout>
  <div class="flex justify-between w-full items-center mb-2">
    <h2 class="font-bold">Weather Stations</h2>
    <a href="/stations/new">
      <Button variant="outline">
        <i class="fa-solid fa-plus mr-2"></i> Add Station
      </Button>
    </a>
  </div>
  <Table>
    <TableHeader>
      <TableRow>
        <TableHead>Name</TableHead>
        <TableHead>ID</TableHead>
        <TableHead>Latitude</TableHead>
        <TableHead>Longitude</TableHead>
        <TableHead>Edit</TableHead>
        <TableHead>Delete</TableHead>
      </TableRow>
    </TableHeader>
    <TableBody>
      {
        stations.map((station) => (
          <TableRow>
            <TableCell className="font-medium">{station.name}</TableCell>
            <TableCell>{station.wu_id}</TableCell>
            <TableCell>{station.lat}</TableCell>
            <TableCell>{station.lon}</TableCell>
            <TableCell className="w-10 text-center">
              <a href={`/stations/${station.id}`}>
                <Button
                  size="icon"
                  variant="ghost"
                  className="h-8 w-8 hover:text-sky-500 text-muted-foreground"
                >
                  <i class="fa-solid fa-edit" />
                </Button>
              </a>
            </TableCell>
            <TableCell className="w-10 text-center">
              <form
                action={`/api/stations/${station.id}/delete`}
                method="post"
                onsubmit="
                return confirm('Are you sure you want to delete this?')
                "
              >
                <Button
                  size="icon"
                  variant="ghost"
                  className="h-8 w-8 hover:text-destructive text-muted-foreground"
                >
                  <i class="fa-solid fa-trash" />
                </Button>
              </form>
            </TableCell>
          </TableRow>
        ))
      }
    </TableBody>
  </Table>
</Layout>
