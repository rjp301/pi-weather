---
import { DateTime } from "luxon";
import Layout from "@/layouts/Layout.astro";
import SummaryTable from "@/components/SummaryTable.astro";
import { DatePicker } from "@/components/DatePicker";
import { SendEmail } from "@/components/SendEmail";

const dateString = Astro.params.date || "";
console.log(dateString);
const date = DateTime.fromISO(dateString);
if (date.invalidReason) return new Response(null, { status: 404 });

const summary = await fetch(
  `${Astro.url.origin}/api/weather/${Astro.params.date}`
).then((res) => res.json());
console.log(summary);
const { data, error } = summary;
if (error) return Astro.redirect(`/error`);
---

<Layout>
  <div class="flex gap-4 justify-between items-center">
    <DatePicker client:load currentDate={date.toJSDate()} />
    <SendEmail client:load dateString={date.toISODate() || ""} />
  </div>
  <br />
  <SummaryTable summary={data} date={date} />
</Layout>
